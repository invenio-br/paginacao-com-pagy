<div class="col-12 col-md-6">
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="https://placehold.co/600x400" class="img-fluid rounded-start" alt="Placeholder" lazy>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">
            <%= content.title %>
          </h5>
          <p class="card-text">
            <%= content.description %>
          </p>
          <p class="card-text">
            <small class="text-body-secondary">
              <%= l content.updated_at, format: :short %>
            </small>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
